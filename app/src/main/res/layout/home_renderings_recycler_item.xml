<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="11dp">

    <ImageView
        android:id="@+id/design_rederings_iv"
        android:layout_width="223dp"
        android:layout_height="126dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/bg_small_magnolia_trees_min"/>

    <RelativeLayout
        android:id="@+id/design_titlte_rl"
        android:layout_width="wrap_content"
        android:layout_height="14dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/design_rederings_iv"
        android:layout_marginTop="14dp">

        <TextView
            android:id="@+id/position_tv"
            style="@style/SansBlodTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="花样年华城 "
            android:textSize="11sp"/>

        <View
            android:id="@+id/divide_line"
            android:layout_width="2px"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginBottom="2dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@+id/position_tv"
            android:background="#3a4043"
            />

        <TextView
            android:id="@+id/style"
            style="@style/SansBlodTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@+id/divide_line"
            android:text="地中海风"
            android:textSize="11sp"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/area_pattern"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/design_titlte_rl"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="6dp"
        android:text="@string/area_pattern"
        android:textColor="#9d9fa1"
        android:textSize="9sp"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_alignEnd="@+id/design_rederings_iv"
        android:layout_alignBottom="@+id/design_titlte_rl"
        android:layout_height="wrap_content">

        <TextView
            android:layout_below="@+id/faverate_iv"
            android:id="@+id/faverate_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="9sp"/>

        <ImageView
            android:id="@+id/faverate_iv"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_marginEnd="6dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="3dp"
            android:src="@mipmap/faverate_collection"/>

    </RelativeLayout>

</RelativeLayout>
