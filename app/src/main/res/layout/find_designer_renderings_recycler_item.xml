<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/design_rederings_iv"
        android:layout_width="223dp"
        android:layout_height="126dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/bg_small_magnolia_trees_min"/>

    <RelativeLayout
        android:id="@+id/design_titlte_rl"
        android:layout_width="wrap_content"
        android:layout_height="14dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/design_rederings_iv"
        android:layout_marginTop="14dp">

        <TextView
            android:id="@+id/style"
            style="@style/SansBlodTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@+id/divide_line"
            android:text="地中海风"
            android:textSize="11sp"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/area_pattern"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/design_titlte_rl"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="6dp"
        android:text="@string/area_pattern"
        android:textColor="#9d9fa1"
        android:textSize="9sp"/>



</RelativeLayout>
