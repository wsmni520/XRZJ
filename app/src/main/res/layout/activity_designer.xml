<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/back_text_two_image_title"></include>

    <com.xrzj.decoration.widget.CircleImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/bg_small_magnolia_trees_min"
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/designer_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="李胜男"
            android:textSize="15dp"/>
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@mipmap/bg_small_lake_min"/>
        <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@mipmap/bg_small_lake_min"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="服务区域：武昌区、洪山区、江夏区"
        android:textSize="15dp"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="擅长风格：地中海、中式、美式、欧式、混搭"
        android:textSize="15dp"
        android:layout_gravity="center_horizontal"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@mipmap/bg_small_lake_min"/>

        <TextView
            android:id="@+id/designer_per_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥50//平方米"
            android:textSize="15dp"/>

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@mipmap/bg_small_lake_min"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <Button
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:text="咨询"
            android:textColor="@color/white"
            android:background="@drawable/rectangle_radius_shape"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:text="找他设计"
            android:textColor="@color/white"
            android:background="@drawable/rectangle_radius_shape"/>/>


    </LinearLayout>

    <android.support.design.widget.TabLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/desiner_info_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        app:tabIndicatorColor="@color/regist_btn_bacground"
        app:tabSelectedTextColor="@color/regist_btn_bacground"
        app:tabTextColor="@color/home_function_btn_text_color" />

    <android.support.v4.view.ViewPager
        android:id="@+id/desiner_info_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff2f4f5"/>
</LinearLayout>
