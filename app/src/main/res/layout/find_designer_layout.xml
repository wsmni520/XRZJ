<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/back_text_two_image_title"></include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:padding="8dp"
        android:layout_height="120dp">



        <android.support.v7.widget.RecyclerView
            android:id="@+id/designer_rank_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="排行"
            android:alpha="5"
            android:textColor="@color/white"
            android:background="#55ff5333"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <Spinner
            android:id="@+id/designer_service_area_sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:entries="@array/designer_service_area_spinner"
            android:layout_weight="1"></Spinner>
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:entries="@array/designer_rank_spinner"
            android:layout_weight="1"></Spinner>
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:entries="@array/designer_favorable_rate_spinner"
            android:layout_weight="1"></Spinner>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/find_designer_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>


</LinearLayout>
