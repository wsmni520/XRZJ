<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

    <LinearLayout
        android:id="@+id/designer_photo_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <com.xrzj.decoration.widget.CircleImageView
            android:id="@+id/designer_photo_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/bg_small_magnolia_trees_min"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/designer_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:text="李胜男"/>


        <TextView
            android:id="@+id/order_num"
            android:layout_weight="1"
            android:gravity="right"
            android:textSize="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单编号9527"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/order_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3D家装设计(不包含施工图)"
        android:textSize="10dp"
        android:layout_below="@+id/designer_photo_ll"
        android:layout_marginTop="8dp"/>
    <TextView
        android:id="@+id/project_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="项目位置:武昌区 中北路 115号"
        android:textSize="10dp"
        android:layout_below="@+id/order_name"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/project_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="面积120㎡"
        android:textSize="10dp"
        android:layout_below="@+id/project_location"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/order_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="订单状态:等待设计师确认"
        android:textSize="10dp"
        android:layout_below="@+id/project_area"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/check_order_btn"
        android:layout_width="50dp"
        android:layout_marginTop="10dp"
        android:layout_height="20dp"
        android:layout_below="@+id/order_state"
        android:layout_marginRight="50dp"
        android:layout_toLeftOf="@+id/appeal_order_btn"
        android:text="查看"
        android:background="@drawable/radius_rectangle_orange"/>
    <Button
        android:id="@+id/appeal_order_btn"
        android:layout_width="50dp"
        android:layout_marginTop="10dp"
        android:layout_height="20dp"
        android:layout_below="@+id/order_state"
        android:layout_marginRight="50dp"
        android:layout_toLeftOf="@+id/evaluate_order_btn"
        android:text="申诉"
        android:background="@drawable/radius_rectangle_orange"/>
    <Button
        android:id="@+id/evaluate_order_btn"
        android:layout_width="50dp"
        android:layout_marginTop="10dp"
        android:layout_height="20dp"
        android:layout_below="@+id/order_state"
        android:layout_alignParentRight="true"
        android:text="评价"
        android:background="@drawable/radius_rectangle_orange"/>
    <Button
        android:id="@+id/payfor_order_btn"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/order_state"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        android:text="立即支付"
        android:background="@drawable/radius_rectangle_orange"/>

    <Button
        android:id="@+id/cancel_order_btn"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/order_state"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        android:text="取消"
        android:background="@color/vl_item_divide_line_color"/>
    <Button
        android:id="@+id/confirm_order_btn"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/order_state"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        android:text="确认"
        android:background="@drawable/radius_rectangle_orange"/>



</RelativeLayout>
