<?xml version="1.0" encoding="utf-8"?>
<merge>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/tool_bar_color"
                    android:orientation="horizontal">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:src="@mipmap/pic_go_back"
            />

        <TextView
            android:id="@+id/tv_title"
            style="@style/TitleStyle"
            android:layout_centerInParent="true"
            android:text="title"/>

        <ImageView
            android:id="@+id/title_right_pre_iv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="15dp"
            android:layout_toStartOf="@+id/title_right_last_iv"
            android:src="@mipmap/me_icon_shoucang2x"
            />

        <ImageView
            android:id="@+id/title_right_last_iv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:src="@mipmap/me_icon_shezhi2x"/>

        <View
            style="@style/DeepUnderLine"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>
</merge>
