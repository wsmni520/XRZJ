<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/back_text_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:gravity="center_vertical"
        >
        <ImageView
            android:id="@+id/im_login_user_phonenum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/pic_user_phone"/>

        <TextView
            android:layout_marginLeft="8dp"
            android:id="@+id/tv_user_phonenum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/user_nick_notice"
            android:textSize="15dp"
            android:layout_centerVertical="true"
            android:textColor="#ff0000"/>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/im_login_msg_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/pic_login_msg_code"
            />

        <TextView
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/im_login_msg_code"
            android:id="@+id/tv_login_msg_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/msg_resend_time"
            android:textSize="15dp"
            android:layout_centerVertical="true"
            android:textColor="#ff0000"/>

        <ImageView
            android:id="@+id/im_login__show_user_pwd"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/pic_login_show_pwd"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/im_login_user_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/pic_login_msg_code"
            android:layout_centerInParent="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/im_login_user_pwd"
            android:id="@+id/tv_login_user_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/msg_resend_time"
            android:layout_centerVertical="true"
            android:textColor="#ff0000"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="点击获取验证码"/>

    </RelativeLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="登录"
        android:background="@color/colorPrimaryDark"/>

</LinearLayout>
