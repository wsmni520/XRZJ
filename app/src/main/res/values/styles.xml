<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="AppTheme" parent="AppTheme.Base">
    </style>

    <style name="FullScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="SplashAppTheme" parent="FullScreen">
        <item name="android:windowBackground">@drawable/layer_splash</item>
    </style>
    <!-- 深色下划线 -->
    <style name="DeepUnderLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/vl_item_divide_line_color</item>
    </style>

    <!--个人中心资料左边文字抽取-->
    <style name="MeInfoTextLeftStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/me_menu_tv_text_color</item>
    </style>

    <!--登录注册文本输入框字体样式-->
    <style name="LoginRegistEditStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/login_regist_et_text_color</item>
        <item name="android:background">@null</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:drawablePadding">15dp</item>
    </style>

    <!--titleBar 标题-->
    <style name="ToolBar.Title" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/login_regist_et_text_color</item>
    </style>

    <!--titleBar 副标题-->
    <style name="Toolbar.SubTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">9dp</item>
        <item name="android:textColor">@color/login_regist_et_text_color</item>
    </style>


</resources>
