<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="AppTheme" parent="AppTheme.Base">
    </style>

    <style name="FullScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="SplashAppTheme" parent="FullScreen">
        <item name="android:windowBackground">@drawable/layer_splash</item>
    </style>
    <!-- 深色下划线 -->
    <style name="DeepUnderLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/vl_item_divide_line_color</item>
    </style>

    <!--个人中心资料左边文字抽取-->
    <style name="MeInfoTextLeftStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/me_menu_tv_text_color</item>
    </style>

    <!--登录注册文本输入框字体样式-->
    <style name="LoginRegistEditStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/login_regist_et_text_color</item>
        <item name="android:background">@null</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:drawablePadding">15dp</item>
    </style>

    <!--titleBar 标题-->
    <style name="ToolBar.Title" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/login_regist_et_text_color</item>
    </style>

    <!--titleBar 副标题-->
    <style name="Toolbar.SubTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">9dp</item>
        <item name="android:textColor">@color/login_regist_et_text_color</item>
    </style>
    <!--主界面栏目标题样式-->
    <style name="HomeColumnTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">@dimen/main_column_title_paddingTop</item>
        <item name="android:paddingBottom">@dimen/main_column_title_paddingBottom</item>
        <item name="android:paddingLeft">@dimen/main_column_title_paddingLeft</item>
        <item name="android:textSize">@dimen/main_column_title_text_size</item>
        <item name="android:textColor">@color/module_title_text_color</item>
    </style>
    <!--主界面栏目查看更多样式-->
    <style name="HomeReadMoreStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">@dimen/main_column_read_more_paddingRight</item>
        <item name="android:textSize">@dimen/main_column_read_more_text_size</item>
        <item name="android:drawableRight">@mipmap/ic_back_right</item>
    </style>
    <!--主界面装修大学板块 绿色标签样式-->
    <style name="GreenTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/decoration_strategy_text_padding</item>
        <item name="android:textSize">@dimen/decoration_strategy_text_size</item>
        <item name="android:background">@color/decoration_strategy_bg</item>
        <item name="android:textColor">@color/decoration_strategy_text_color</item>
    </style>
    <!--主界面装修大学板块 新闻文本框样式-->
    <style name="DecorationUvNewsTextStyle">
        <item name="android:textSize">@dimen/decoration_uv_news_text_size</item>
        <item name="android:textColor">@color/decoration_uv_news_text_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">3</item>
    </style>

    <style name="SansBlodTextStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">sans</item>
    </style>


</resources>
